{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:docs-gen:schema:config:common",
  "title": "Common Config Schema",
  "description": "Shared config schema for docs-gen across all OpenAPI versions",
  "type": "object",
  "additionalProperties": false,
  "required": ["_internalConfig", "openAPIConfig", "generatorConfig"],
  "definitions": {
    "oauthFlowImplicit": {
      "type": "object",
      "additionalProperties": false,
      "required": ["authorizationUrl", "scopes"],
      "properties": {
        "authorizationUrl": { "type": "string", "format": "uri" },
        "refreshUrl": { "type": "string", "format": "uri" },
        "scopes": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": { "type": "string", "minLength": 1 }
        }
      }
    },
    "oauthFlowPassword": {
      "type": "object",
      "additionalProperties": false,
      "required": ["tokenUrl", "scopes"],
      "properties": {
        "tokenUrl": { "type": "string", "format": "uri" },
        "refreshUrl": { "type": "string", "format": "uri" },
        "scopes": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": { "type": "string", "minLength": 1 }
        }
      }
    },
    "oauthFlowClientCredentials": {
      "type": "object",
      "additionalProperties": false,
      "required": ["tokenUrl", "scopes"],
      "properties": {
        "tokenUrl": { "type": "string", "format": "uri" },
        "refreshUrl": { "type": "string", "format": "uri" },
        "scopes": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": { "type": "string", "minLength": 1 }
        }
      }
    },
    "oauthFlowAuthorizationCode": {
      "type": "object",
      "additionalProperties": false,
      "required": ["authorizationUrl", "tokenUrl", "scopes"],
      "properties": {
        "authorizationUrl": { "type": "string", "format": "uri" },
        "tokenUrl": { "type": "string", "format": "uri" },
        "refreshUrl": { "type": "string", "format": "uri" },
        "scopes": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": { "type": "string", "minLength": 1 }
        }
      }
    }
  },
  "properties": {
    "_internalConfig": { "type": "object", "additionalProperties": true },
    "openAPIConfig": {
      "type": "object",
      "additionalProperties": false,
      "required": ["info"],
      "properties": {
        "info": {
          "type": "object",
          "additionalProperties": false,
          "required": ["title", "version"],
          "properties": {
            "title": { "type": "string", "minLength": 1 },
            "version": { "type": "string", "minLength": 1 },
            "description": { "type": "string", "minLength": 1 },
            "termsOfService": { "type": "string", "format": "uri" },
            "contact": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "name": { "type": "string", "minLength": 1 },
                "url": { "type": "string", "format": "uri" },
                "email": { "type": "string", "format": "email" }
              },
              "errorMessage": {
                "additionalProperties": "info.contact allowed properties: [name, url, email]",
                "properties": {
                  "name": "info.contact.name must be a non-empty string",
                  "url": "info.contact.url must be a valid URL",
                  "email": "info.contact.email must be a valid email"
                }
              }
            },
            "license": { "type": "object", "additionalProperties": true }
          },
          "errorMessage": {
            "additionalProperties": "openAPIConfig.info allowed properties: [title, version, description, termsOfService, contact, license]",
            "required": {
              "title": "info.title is required",
              "version": "info.version is required"
            },
            "properties": {
              "title": "info.title must be a non-empty string",
              "version": "info.version must be a non-empty string",
              "description": "info.description must be a non-empty string",
              "termsOfService": "info.termsOfService must be a valid URL",
              "contact": "info.contact must be an object",
              "license": "info.license must be an object"
            }
          }
        },
        "securitySchemes": {
          "type": "object",
          "additionalProperties": {
            "oneOf": [
              {
                "title": "API Key Security Scheme",
                "type": "object",
                "additionalProperties": false,
                "required": ["type", "name", "in"],
                "properties": {
                  "type": { "const": "apiKey" },
                  "description": { "type": "string", "minLength": 1 },
                  "name": { "type": "string", "minLength": 1 },
                  "in": { "enum": ["query", "header", "cookie"] }
                },
                "errorMessage": {
                  "required": {
                    "type": "securitySchemes.<name>.type is required",
                    "name": "securitySchemes.<name>.name is required",
                    "in": "securitySchemes.<name>.in is required"
                  },
                  "properties": {
                    "type": "apiKey security scheme must have type: 'apiKey'",
                    "name": "apiKey name must be a non-empty string",
                    "in": "apiKey.in must be one of: query, header, cookie"
                  },
                  "additionalProperties": "apiKey security scheme allows only: [type, description, name, in]"
                }
              },
              {
                "title": "HTTP Security Scheme",
                "type": "object",
                "additionalProperties": false,
                "required": ["type", "scheme"],
                "properties": {
                  "type": { "const": "http" },
                  "description": { "type": "string", "minLength": 1 },
                  "scheme": { "type": "string", "minLength": 1 },
                  "bearerFormat": { "type": "string", "minLength": 1 }
                },
                "errorMessage": {
                  "required": {
                    "type": "securitySchemes.<name>.type is required",
                    "scheme": "securitySchemes.<name>.scheme is required"
                  },
                  "properties": {
                    "type": "http security scheme must have type: 'http'",
                    "scheme": "http.scheme must be a non-empty string",
                    "bearerFormat": "http.bearerFormat must be a non-empty string"
                  },
                  "additionalProperties": "http security scheme allows only: [type, description, scheme, bearerFormat]"
                }
              },
              {
                "title": "OAuth2 Security Scheme",
                "type": "object",
                "additionalProperties": false,
                "required": ["type", "flows"],
                "properties": {
                  "type": { "const": "oauth2" },
                  "description": { "type": "string", "minLength": 1 },
                  "flows": {
                    "type": "object",
                    "additionalProperties": false,
                    "minProperties": 1,
                    "properties": {
                      "implicit": { "$ref": "#/definitions/oauthFlowImplicit" },
                      "password": { "$ref": "#/definitions/oauthFlowPassword" },
                      "clientCredentials": { "$ref": "#/definitions/oauthFlowClientCredentials" },
                      "authorizationCode": { "$ref": "#/definitions/oauthFlowAuthorizationCode" }
                    },
                    "errorMessage": {
                      "minProperties": "oauth2.flows must define at least one OAuth flow",
                      "additionalProperties": "oauth2.flows allowed properties: [implicit, password, clientCredentials, authorizationCode]"
                    }
                  }
                },
                "errorMessage": {
                  "required": {
                    "type": "securitySchemes.<name>.type is required",
                    "flows": "securitySchemes.<name>.flows is required"
                  },
                  "properties": {
                    "type": "oauth2 security scheme must have type: 'oauth2'",
                    "flows": "oauth2.flows must be an object defining at least one flow"
                  },
                  "additionalProperties": "oauth2 security scheme allows only: [type, description, flows]"
                }
              },
              {
                "title": "OpenID Connect Security Scheme",
                "type": "object",
                "additionalProperties": false,
                "required": ["type", "openIdConnectUrl"],
                "properties": {
                  "type": { "const": "openIdConnect" },
                  "description": { "type": "string", "minLength": 1 },
                  "openIdConnectUrl": { "type": "string", "format": "uri" }
                },
                "errorMessage": {
                  "required": {
                    "type": "securitySchemes.<name>.type is required",
                    "openIdConnectUrl": "securitySchemes.<name>.openIdConnectUrl is required"
                  },
                  "properties": {
                    "type": "openIdConnect security scheme must have type: 'openIdConnect'",
                    "openIdConnectUrl": "openIdConnectUrl must be a valid URL"
                  },
                  "additionalProperties": "openIdConnect security scheme allows only: [type, description, openIdConnectUrl]"
                }
              },
              {
                "title": "Mutual TLS Security Scheme",
                "type": "object",
                "additionalProperties": false,
                "required": ["type"],
                "properties": {
                  "type": { "const": "mutualTLS" },
                  "description": { "type": "string", "minLength": 1 }
                },
                "errorMessage": {
                  "required": {
                    "type": "securitySchemes.<name>.type is required"
                  },
                  "properties": {
                    "type": "mutualTLS security scheme must have type: 'mutualTLS'"
                  },
                  "additionalProperties": "mutualTLS security scheme allows only: [type, description]"
                }
              }
            ]
          },
          "errorMessage": {
            "additionalProperties": "securitySchemes allowed properties: security scheme names"
          }
        },
        "security": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": { "type": "string", "minLength": 1 }
            },
            "errorMessage": {
              "type": "Each security requirement must be an object mapping scheme names to scope arrays"
            }
          }
        },
        "servers": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["url"],
            "properties": {
              "url": { "type": "string", "minLength": 1 },
              "description": { "type": "string", "minLength": 1 },
              "variables": {
                "type": "object",
                "additionalProperties": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["default"],
                  "properties": {
                    "enum": {
                      "type": "array",
                      "items": { "type": "string", "minLength": 1 },
                      "minItems": 1
                    },
                    "default": { "type": "string", "minLength": 1 },
                    "description": { "type": "string", "minLength": 1 }
                  },
                  "errorMessage": {
                    "additionalProperties": "servers[].variables allowed properties: [enum, default, description]",
                    "required": {
                      "default": "servers[].variables.<name>.default is required"
                    },
                    "properties": {
                      "enum": "servers[].variables.<name>.enum must be a non-empty array of strings",
                      "default": "servers[].variables.<name>.default must be a non-empty string",
                      "description": "servers[].variables.<name>.description must be a non-empty string"
                    }
                  }
                }
              }
            },
            "errorMessage": {
              "additionalProperties": "servers[] allowed properties: [url, description, variables]",
              "required": {
                "url": "servers[].url is required"
              },
              "properties": {
                "url": "servers[].url must be a valid URL",
                "description": "servers[].description must be a non-empty string",
                "variables": "servers[].variables must be an object"
              }
            }
          }
        },
        "externalDocs": {
          "type": "object",
          "additionalProperties": false,
          "required": ["url"],
          "properties": {
            "description": { "type": "string", "minLength": 1 },
            "url": { "type": "string", "format": "uri" }
          },
          "errorMessage": {
            "additionalProperties": "openAPIConfig.externalDocs allowed properties: [description, url]",
            "required": {
              "url": "externalDocs.url is required"
            },
            "properties": {
              "description": "externalDocs.description must be a non-empty string",
              "url": "externalDocs.url must be a valid URL"
            }
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name"],
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "description": { "type": "string", "minLength": 1 },
              "externalDocs": {
                "$ref": "#/properties/openAPIConfig/properties/externalDocs"
              }
            },
            "errorMessage": {
              "additionalProperties": "tags[] allowed properties: [name, description, externalDocs]",
              "required": {
                "name": "tags[].name is required"
              },
              "properties": {
                "name": "tags[].name must be a non-empty string",
                "description": "tags[].description must be a non-empty string",
                "externalDocs": "tags[].externalDocs must be an object"
              }
            }
          }
        }
      },
      "errorMessage": {
        "additionalProperties": "openAPIConfig allowed properties: [info, securitySchemes, security, servers, externalDocs, tags]",
        "required": {
          "info": "openAPIConfig.info is required"
        },
        "properties": {
          "info": "openAPIConfig.info must be an object",
          "securitySchemes": "openAPIConfig.securitySchemes must be an object of security scheme definitions",
          "security": "openAPIConfig.security must be an array of objects",
          "servers": "openAPIConfig.servers must be an array of objects",
          "externalDocs": "openAPIConfig.externalDocs must be an object",
          "tags": "openAPIConfig.tags must be an array of objects"
        }
      }
    },
    "generatorConfig": {
      "type": "object",
      "additionalProperties": false,
      "required": ["baseDir", "filePatterns", "outputDir", "outputFileName"],
      "properties": {
        "baseDir": { "type": "string", "minLength": 1 },
        "filePatterns": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "minItems": 1
        },
        "outputDir": { "type": "string", "minLength": 1 },
        "outputFileName": { "type": "string", "minLength": 1 }
      },
      "errorMessage": {
        "additionalProperties": "generatorConfig allowed properties: [baseDir, filePatterns, outputDir, outputFileName]",
        "required": {
          "baseDir": "generatorConfig.baseDir is required",
          "filePatterns": "generatorConfig.filePatterns is required",
          "outputDir": "generatorConfig.outputDir is required",
          "outputFileName": "generatorConfig.outputFileName is required"
        },
        "properties": {
          "baseDir": "generatorConfig.baseDir must be a non-empty string",
          "filePatterns": "generatorConfig.filePatterns must be a non-empty array of strings",
          "outputDir": "generatorConfig.outputDir must be a non-empty string",
          "outputFileName": "generatorConfig.outputFileName must be a non-empty string"
        }
      }
    }
  },
  "errorMessage": {
    "additionalProperties": "docs-gen.config.js allowed properties: [_internalConfig, openAPIConfig, generatorConfig]",
    "required": {
      "_internalConfig": "_internalConfig is required",
      "openAPIConfig": "openAPIConfig is required",
      "generatorConfig": "generatorConfig is required"
    }
  }
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:docs-gen:schema:config:3.0.0",
  "title": "OpenAPI 3.0.x Config Schema",
  "description": "Schema for config of OpenAPI version 3.0.x",
  "allOf": [
    { "$ref": "urn:docs-gen:schema:config:common" },
    {
      "type": "object",
      "properties": {
        "_internalConfig": {
          "type": "object",
          "required": ["openapi"],
          "properties": {
            "openapi": { "const": "3.0.0" }
          },
          "unevaluatedProperties": false,
          "errorMessage": {
            "type": "_internalConfig must be an object",
            "required": {
              "openapi": "_internalConfig.openapi is required"
            },
            "properties": {
              "openapi": "_internalConfig.openapi field must be 3.0.0"
            },
            "unevaluatedProperties": "_internalConfig allowed properties: [openapi]"
          }
        },

        "openAPIConfig": {
          "type": "object",
          "required": ["info"],
          "properties": {
            "info": {
              "type": "object",
              "allOf": [
                { "$ref": "urn:docs-gen:schema:config:common#/definitions/InfoBase" },
                {
                  "type": "object",
                  "properties": {
                    "license": {
                      "$ref": "urn:docs-gen:schema:config:common#/definitions/LicenseWithUrl"
                    }
                  }
                }
              ],
              "unevaluatedProperties": false,
              "errorMessage": {
                "unevaluatedProperties": "info allowed properties: [title, version, description, termsOfService, contact, license]"
              }
            },
            "externalDocs": {
              "$ref": "urn:docs-gen:schema:config:common#/definitions/ExternalDocsObject"
            },
            "tags": {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "object",
                "allOf": [{ "$ref": "urn:docs-gen:schema:config:common#/definitions/TagBase" }],
                "unevaluatedProperties": false,
                "errorMessage": {
                  "type": "tags[tag] must be an object",
                  "unevaluatedProperties": "tag allowed properties: [name, description, externalDocs]"
                }
              },
              "errorMessage": {
                "type": "openAPIConfig.tags must be an array",
                "uniqueItems": "openAPIConfig.tags must not contain duplicate tag objects"
              }
            }
          },
          "unevaluatedProperties": false,
          "errorMessage": {
            "type": "openAPIConfig must be an object",
            "required": {
              "info": "openAPIConfig.info is required"
            },
            "unevaluatedProperties": "openAPIConfig allowed properties: [info, externalDocs, tags]"
          }
        }
      }
    }
  ]
}

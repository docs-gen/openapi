{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:docs-gen:schema:config:3.0.0",
  "title": "OpenAPI 3.0.x Config Schema",
  "description": "Schema for config of OpenAPI version 3.0.x",
  "allOf": [
    { "$ref": "urn:docs-gen:schema:config:common" },
    {
      "type": "object",
      "properties": {
        "_internalConfig": {
          "type": "object",
          "additionalProperties": false,
          "required": ["openapi"],
          "properties": {
            "openapi": { "const": "3.0.0" }
          },
          "errorMessage": {
            "additionalProperties": "_internalConfig allowed fields: [openapi]",
            "required": {
              "openapi": "_internalConfig.openapi field is required"
            },
            "properties": {
              "openapi": "_internalConfig.openapi field must be 3.0.0"
            }
          }
        },
        "openAPIConfig": {
          "type": "object",
          "properties": {
            "info": {
              "type": "object",
              "properties": {
                "license": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["name"],
                  "properties": {
                    "name": { "type": "string", "minLength": 1 },
                    "url": { "type": "string", "format": "uri" }
                  },
                  "errorMessage": {
                    "additionalProperties": "license allowed fields: [name, url]",
                    "required": {
                      "name": "license.name is required"
                    },
                    "properties": {
                      "name": "license.name must be a non-empty string",
                      "url": "license.url must be a valid URL"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  ]
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:docs-gen:schema:config:3.1.0",
  "title": "OpenAPI 3.1.x Config Schema",
  "description": "Schema for config of OpenAPI version 3.1.x",
  "allOf": [
    { "$ref": "urn:docs-gen:schema:config:common" },
    {
      "type": "object",
      "properties": {
        "_internalConfig": {
          "type": "object",
          "required": ["openapi", "jsonSchemaDialect"],
          "properties": {
            "openapi": { "const": "3.1.0" },
            "jsonSchemaDialect": { "const": "https://json-schema.org/draft/2020-12/schema" }
          },
          "unevaluatedProperties": false,
          "errorMessage": {
            "type": "_internalConfig must be an object",
            "required": {
              "openapi": "_internalConfig.openapi is required",
              "jsonSchemaDialect": "_internalConfig.jsonSchemaDialect is required"
            },
            "properties": {
              "openapi": "_internalConfig.openapi field must be 3.1.0",
              "jsonSchemaDialect": "_internalConfig.jsonSchemaDialect field must be https://json-schema.org/draft/2020-12/schema"
            },
            "unevaluatedProperties": "_internalConfig allowed properties: [openapi, jsonSchemaDialect]"
          }
        },

        "openAPIConfig": {
          "type": "object",
          "required": ["info"],
          "properties": {
            "info": {
              "type": "object",
              "allOf": [
                { "$ref": "urn:docs-gen:schema:config:common#/definitions/InfoBase" },
                {
                  "type": "object",
                  "properties": {
                    "summary": {
                      "$ref": "urn:docs-gen:schema:config:common#/definitions/Global/Primitives/NON_EMPTY_STRING"
                    },
                    "license": {
                      "type": "object",
                      "oneOf": [
                        {
                          "$ref": "urn:docs-gen:schema:config:common#/definitions/LicenseWithUrl"
                        },
                        {
                          "$ref": "urn:docs-gen:schema:config:common#/definitions/LicenseWithIdentifier"
                        }
                      ],
                      "errorMessage": "OpenAPI(3.0.x): LicenseWithUrl\n ↪ OpenAPI(3.1.x, 3.2.x): LicenseWithUrl / LicenseWithIdentifier"
                    }
                  },
                  "errorMessage": {
                    "properties": {
                      "summary": "info.summary must be a non-empty string"
                    }
                  }
                }
              ],
              "unevaluatedProperties": false,
              "errorMessage": {
                "unevaluatedProperties": "info allowed properties: [title, version, description, summary, termsOfService, contact, license]"
              }
            },
            "securitySchemes": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "oneOf": [
                  {
                    "$ref": "urn:docs-gen:schema:config:common#/definitions/SecuritySchemes/ApiKeySecuritySchemeObject"
                  },
                  {
                    "$ref": "urn:docs-gen:schema:config:common#/definitions/SecuritySchemes/HttpSecuritySchemeObject"
                  },
                  {
                    "$ref": "urn:docs-gen:schema:config:common#/definitions/SecuritySchemes/MutualTLSSecuritySchemeObject"
                  },
                  {
                    "$ref": "urn:docs-gen:schema:config:common#/definitions/SecuritySchemes/OAuth2SecuritySchemeObject"
                  },
                  {
                    "$ref": "urn:docs-gen:schema:config:common#/definitions/SecuritySchemes/OpenIDConnectSecuritySchemeObject"
                  }
                ],
                "errorMessage": "securitySchemes.scheme: object (schemeName: schemeType)\n  • schemeName: string (non-empty, required)\n  • schemeType(3.0.x): ApiKey / Http / OAuth2 / OpenIDConnect\n  • schemeType(3.1.x, 3.2.x): ApiKey / Http / MutualTLS / OAuth2 / OpenIDConnect\n ↪ For more info: https://github.com/OAI/OpenAPI-Specification/blob/main/versions/3.0.0.md#security-scheme-object"
              },
              "errorMessage": {
                "type": "openAPIConfig.securitySchemes must be an object"
              }
            },
            "security": {
              "type": "array",
              "items": {
                "$ref": "urn:docs-gen:schema:config:common#/definitions/SecurityRequirementObject"
              },
              "errorMessage": {
                "type": "openAPIConfig.security must be an array"
              }
            },
            "servers": {
              "type": "array",
              "items": {
                "type": "object",
                "allOf": [{ "$ref": "urn:docs-gen:schema:config:common#/definitions/ServerBase" }],
                "unevaluatedProperties": false,
                "errorMessage": {
                  "type": "servers[server] must be an object",
                  "unevaluatedProperties": "server allowed properties: [url, description, variables]"
                }
              },
              "errorMessage": {
                "type": "openAPIConfig.servers must be an array"
              }
            },
            "externalDocs": {
              "$ref": "urn:docs-gen:schema:config:common#/definitions/ExternalDocsObject"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "object",
                "allOf": [{ "$ref": "urn:docs-gen:schema:config:common#/definitions/TagBase" }],
                "unevaluatedProperties": false,
                "errorMessage": {
                  "type": "tags[tag] must be an object",
                  "unevaluatedProperties": "tag allowed properties: [name, description, externalDocs]"
                }
              },
              "errorMessage": {
                "type": "openAPIConfig.tags must be an array"
              }
            }
          },
          "unevaluatedProperties": false,
          "errorMessage": {
            "type": "openAPIConfig must be an object",
            "required": {
              "info": "openAPIConfig.info is required"
            },
            "unevaluatedProperties": "openAPIConfig allowed properties: [info, securitySchemes, security, servers, externalDocs, tags]"
          }
        }
      }
    }
  ]
}
